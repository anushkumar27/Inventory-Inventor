    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Scan Product"
        android:id="@+id/scan"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_scanner_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:background="#fdfefe"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="ADD INVENTORY"
        android:id="@+id/add"
        android:layout_marginTop="20dp"
        android:onClick="BUTTONADD"
        android:drawableLeft="@drawable/ic_add_shopping_cart_black_36dp"
        android:layout_below="@+id/scan"
        android:layout_alignLeft="@+id/viewinventory"
        android:layout_alignStart="@+id/viewinventory"
        android:background="#fdfefe"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="VIEW INVENTORY"
        android:id="@+id/viewinventory"
        android:drawableLeft="@drawable/ic_view_list_black_36dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/add"
        android:layout_centerHorizontal="true"
        android:onClick="VIEWINVENTORY"
        android:background="#fdfefe"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="CALC INVENTORY"
        android:id="@+id/calcinventory"
        android:drawableLeft="@drawable/ic_shopping_cart_black_36dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/viewinventory"
        android:layout_centerHorizontal="true"
        android:onClick="CALCINVENTORY"
        android:background="#fdfefe"/>

    <Button
    android:layout_width="200dp"
    android:layout_height="70dp"
    android:text="PROFIT STATS"
    android:id="@+id/viewstats"
    android:drawableLeft="@drawable/ic_assessment_black_36dp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/calcinventory"
    android:layout_centerHorizontal="true"
    android:onClick="VIEWSTATS"
    android:background="#fdfefe"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="SALES STATS"
        android:id="@+id/salesstats"
        android:drawableLeft="@drawable/ic_assessment_black_36dp"
        android:onClick="INTENT"
        android:background="#fdfefe"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/viewstats"
        android:layout_alignLeft="@+id/viewstats"
        android:layout_alignStart="@+id/viewstats" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/salesstats"
        android:layout_toRightOf="@+id/salesstats"
        android:layout_toEndOf="@+id/salesstats"
        android:background="#fdfefe"/>

</RelativeLayout>